# Church Management Frontend Environment Configuration

# API Configuration
API_BASE_URL=http://localhost:5000/api

# Pusher Configuration (Real-time notifications)
PUSHER_KEY=your_pusher_key_here
PUSHER_CLUSTER=mt1

# Monnify Configuration (Payment processing)
MONNIFY_PUBLIC_KEY=your_monnify_public_key_here
MONNIFY_CONTRACT_CODE=your_contract_code_here

# App Configuration
NODE_ENV=development
PORT=3000

# Optional: Analytics and Monitoring
GOOGLE_ANALYTICS_ID=your_ga_id_here
SENTRY_DSN=your_sentry_dsn_here

# Optional: Feature Flags
ENABLE_PWA=true
ENABLE_OFFLINE_MODE=false
ENABLE_DEBUG_MODE=true
